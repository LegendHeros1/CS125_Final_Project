                android:layout_height="wrap_content"
                android:text="Player 1:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/player1_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="$0"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
