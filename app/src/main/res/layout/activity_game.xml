                android:id="@+id/v400_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$400" />

            <Button
                android:id="@+id/v400_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$400" />

            <Button
                android:id="@+id/v400_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
